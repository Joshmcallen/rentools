<% include layout %>
<div  id="root" style="width: 280px; margin: 40px auto; padding: 10px;">
  <script>

  //Construct an instance of Auth0Lock with your clientId and aut0 domain name
    var client = "<%=env.AUTH0_CLIENT_ID%>";
    var domain = "<%=env.AUTH0_DOMAIN%>";
    var url = "<%=env.AUTH0_CALLBACK_URL%>"
    var lock = new Auth0Lock(client, domain,{ auth: {
          redirectUrl: url
        , responseType: 'code'
        , params: {
          scope: 'openid name email picture'
        }
      }});

    // Show lock's login widget

</script>
<script> lock.show(); </script>
